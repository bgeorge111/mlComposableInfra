FROM docker.io/bitnami/spark:2
ARG _SPARK_ML_CONNECTOR_JAR
ARG _SPARK_CONFIG_DEFAULTS
ARG _SPARK_PROJECT_JAR
COPY ./spark/${_SPARK_ML_CONNECTOR_JAR} /tmp/${_SPARK_ML_CONNECTOR_JAR}
COPY ./spark/${_SPARK_CONFIG_DEFAULTS} /tmp/${_SPARK_CONFIG_DEFAULTS}
COPY ./spark/${_SPARK_PROJECT_JAR} /opt/bitnami/spark/conf/${_SPARK_PROJECT_JAR}